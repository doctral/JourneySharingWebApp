<% include ../partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a new comment to <%=camp.name%> </h1>
        <form style="width:30%; margin:20px auto;"  action="/photos/<%=camp._id%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>

